<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#2142C7"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_currency_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="Icon of the bitcoin"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_launcher_foreground"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/iv_currency_icon"
        android:layout_toEndOf="@id/iv_currency_icon"
        android:text="Nothing..."
        android:textColor="@color/white"
        android:layout_marginVertical="4dp"
        tools:text="BOUGHT" />

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_message"
        android:layout_alignStart="@id/tv_message"
        android:text="0.00 BTC for 0.0 USD"
        android:textColor="@color/white"
        android:layout_marginVertical="4dp"
        tools:text="X.YY [SYMBOL] for X.Y USD" />


    <TextView
        android:id="@+id/tv_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_summary"
        android:layout_alignStart="@id/tv_summary"
        android:text="Date time"
        android:textColor="@color/white"
        android:layout_marginVertical="4dp"
        tools:text="@tools:sample/date/ddmmyy" />

</RelativeLayout>