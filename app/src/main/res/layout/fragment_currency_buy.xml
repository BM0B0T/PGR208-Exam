    <ImageView
        android:id="@+id/iv_currency_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"

        android:layout_marginStart="56dp"
        android:layout_marginTop="84dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_currency_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="104dp"
        android:text="Name: Etherum"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/iv_currency_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Name: Etherum" />

    <TextView
        android:id="@+id/tv_sumValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate: 1683.5"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/tv_currency_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_currency_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_currency_name"
        tools:text="$54,044.64 $" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="384dp"
        android:background="#A8A8A8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_currency_icon"
        app:layout_constraintVertical_bias="0.079">


        <TextView
            android:id="@+id/tv_crypto_currency_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginStart="60dp"
            android:layout_marginTop="56dp"
            android:text="Symbol: ETH"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Symbol: ETH" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="44dp"
            android:text="0,55"
            app:layout_constraintStart_toEndOf="@+id/tv_crypto_currency_symbol"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_dollar_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="16dp"
            android:text="USD"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/tv_crypto_currency_symbol"
            app:layout_constraintTop_toBottomOf="@+id/tv_crypto_currency_symbol"
            tools:text="Symbol: USD" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tv_dollar_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginStart="40dp"
            android:hint="3000"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/tv_dollar_symbol"
            app:layout_constraintTop_toBottomOf="@+id/textInputEditText"
            tools:hint="3000!"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_marginTop="44dp"
            android:text="Buy"
            app:layout_constraintEnd_toEndOf="@+id/tv_dollar_symbol"
            app:layout_constraintStart_toStartOf="@+id/tv_dollar_symbol"
            app:layout_constraintTop_toBottomOf="@+id/tv_dollar_symbol" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>